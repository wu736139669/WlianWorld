#import "ViewController.h"
#import "MenuViewController.h"
#import "Defines.h"
#import <SDWebImage/UIImageView+WebCache.h>

@interface ViewController ()<UITableViewDataSource,UITableViewDelegate,UITextFieldDelegate>
{
    UIImageView *brandImageView;
    UITableView *tableView;
    UITextField *idStoreTextField;
    UITextField *passWordTextField;
    UIButton *loginButton;
}
@end

@implementation ViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    self.navigationItem.title = @"微连天下";
    self.view.backgroundColor = [UIColor whiteColor];
    [self initBrandView];
    [self initTableView];
    [self initLoginButton];
    
}

- (void)initBrandView
{
    brandImageView = [[UIImageView alloc] initWithFrame:CGRectMake(10, CGRectGetMaxY(self.navigationController.navigationBar.frame) + 30, kScreenWidth - 20, 120)];
    brandImageView.contentMode = UIViewContentModeScaleAspectFit;
    brandImageView.image = [UIImage imageNamed:@"brand.png"];
    [self.view addSubview:brandImageView];
}

- (void)initTableView
{
    tableView = [[UITableView alloc] initWithFrame:CGRectMake(0, 150, kScreenWidth, kScreenHeight - CGRectGetMaxY(brandImageView.frame)) style:UITableViewStylePlain];
    tableView.dataSource = self;
    tableView.delegate = self;
    tableView.tableFooterView = [[UIView alloc] init];
    tableView.scrollEnabled = NO;
    [self.view addSubview:tableView];
}

- (void)initLoginButton
{
    loginButton = [UIButton buttonWithType:UIButtonTypeSystem];
    loginButton.frame = CGRectMake(10, 280, kScreenWidth - 20, 45);
    [loginButton setTitle:@"立即登陆" forState:UIControlStateNormal];
    loginButton.tintColor = [UIColor whiteColor];
    [loginButton addTarget:self action:@selector(finish) forControlEvents:UIControlEventTouchUpInside];
    loginButton.backgroundColor = [UIColor redColor];
    [self.view addSubview:loginButton];
}

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return 2;
}

- (UITableViewCell *)tableView:(UITableView *)tableView1 cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    UITableViewCell *cell = [tableView1 dequeueReusableCellWithIdentifier:@"cell"];
    if (!cell) {
        cell = [[UITableViewCell alloc] initWithStyle:UITableViewCellStyleValue1 reuseIdentifier:@"cell"];
    }
    if (indexPath.row == 0) {
        cell.textLabel.text = @"账号";
        idStoreTextField = [[UITextField alloc] initWithFrame:CGRectMake(80, 0, kScreenWidth - 80, 50)];
        idStoreTextField.delegate = self;
        idStoreTextField.placeholder = @"请输入门店账号";
        [cell.contentView addSubview:idStoreTextField];
    }
    if (indexPath.row == 1) {
        cell.textLabel.text = @"密码";
        passWordTextField = [[UITextField alloc] initWithFrame:CGRectMake(80, 0, kScreenWidth - 80, 50)];
        passWordTextField.delegate = self;
        passWordTextField.placeholder = @"请输入密码";
        [cell.contentView addSubview:passWordTextField];
    }
    cell.selectionStyle = UITableViewCellSelectionStyleNone;
    return cell;
}

- (CGFloat)tableView:(UITableView *)tableView heightForRowAtIndexPath:(NSIndexPath *)indexPath
{
    return 50;
}

- (void)finish
{
    [self dismissViewControllerAnimated:YES completion:nil];
}

-(BOOL)textFieldShouldReturn:(UITextField *)textField
{
    [textField resignFirstResponder];
    return YES;
}



- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

@end
